{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },                     // Serve API functions and static assets first
    { "src": "/(.*)", "dest": "/client/index.html" }  // SPA fallback
  ]
}
