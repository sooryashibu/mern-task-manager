{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "handle": "filesystem" },   
    { "src": "/api/(.*)", "dest": "/api/$1.js" }, 
    { "src": "/(.*)", "dest": "/client/index.html" } 
  ]
}
